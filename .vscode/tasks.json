{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-L C:/mingw-w64/lib",
                "-IC:/glew-2.1.0/include",
                "-LC:/glew-2.1.0/lib/Release/x64",
                "-IC:/freeglut/include",
                "-LC:/freeglut/lib/x64",
                "-lfreeglut",
                "-lglew32",
                "-lopengl32",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}